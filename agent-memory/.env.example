# Agent Memory System Configuration
# Copy to .env and fill in your values

# Path to the Obsidian vault (default: ./vault)
AGENT_VAULT_PATH=./vault

# Anthropic API key (required for AI-powered summaries, search, and flush)
ANTHROPIC_API_KEY=

# Model for memory operations (default: claude-sonnet-4-5-20250929)
AGENT_MODEL=claude-sonnet-4-5-20250929

# Number of days of daily logs to load at session start (default: 2)
AGENT_MEMORY_RECENT_DAYS=2

# Maximum search results (default: 6)
AGENT_MEMORY_MAX_RESULTS=6

# Days to keep daily logs before archiving (default: 30)
AGENT_MEMORY_ARCHIVE_DAYS=30
